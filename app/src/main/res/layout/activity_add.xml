<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:padding="30dp">
    <!--
this is the add activity
-->
    <EditText
        android:id="@+id/name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Student Full Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/number_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--
assigning ids
-->

    <EditText
        android:id="@+id/course_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="174dp"
        android:ems="10"
        android:hint="Course Name And Number"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--
assigning ids
-->

    <EditText
        android:id="@+id/number_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="Student Id number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/grade_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--
assigning ids
-->

    <EditText
        android:id="@+id/grade_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Student Grade"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/grad_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--
assigning ids
-->

    <EditText
        android:id="@+id/grad_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Estimated Graduation"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/course_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--
assigning ids
-->

    <Button
        android:id="@+id/add_button"
        android:layout_width="219dp"
        android:layout_height="56dp"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="59dp"
        android:background="#673AB7"
        android:backgroundTint="#673AB7"
        android:text="Add Student to Waiting List"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--
assigning ids
-->


</androidx.constraintlayout.widget.ConstraintLayout>