<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!--
this is the login activity
-->
    <EditText
        android:id="@+id/username"
        android:layout_width="419dp"
        android:layout_height="62dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="UserName"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintStart_toStartOf="parent" />

    <!--
a edit text created with an id assigned of username
-->

    <EditText
        android:id="@+id/password"
        android:layout_width="419dp"
        android:layout_height="62dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="text|textPassword"
        app:layout_constraintBottom_toTopOf="@+id/Loginbtn"
        app:layout_constraintStart_toStartOf="parent" />

    <!--
a edit text created with an id assigned of password
-->

    <!--
a button created with an id assigned of Loginbtn
-->

    <Button
        android:id="@+id/Loginbtn"
        android:layout_width="395dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="92dp"
        android:background="#03A9F4"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/SiginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="124dp"
        android:text="Sign-In"
        android:textColor="#170101"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintStart_toStartOf="parent" />

    <!--
a text view created with an id assigned of SigninLabel which will show under the logo
-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="221dp"
        android:layout_height="176dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="176dp"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />

    <!--
this is our imageview which is our logo thats in the drawable that is named under icon
-->



</androidx.constraintlayout.widget.ConstraintLayout>